{
  "extends": "@latitude-data/typescript/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "declarationDir": "./dist",
    "outDir": "dist",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "$src": ["src"],
      "$src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "rollup.config.mjs",
    "tailwind.config.js",
    "vitest.config.js"
  ],
  "exclude": ["./node_modules", "dist", "*.test.ts"]
}
